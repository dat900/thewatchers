<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
	<title>@ViewBag.Title</title>
	<link href="~/Models/Images/f9e92999c97452ace6e87d6f8185c81d--taco-man-seo.jpg" rel="shortcut icon" type="image/x-icon" />
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	
	<style>
		.carousel img {
			width: 100%;
			height: 500px;
		}
		footer {
			margin-top: 10px;
		}
	</style>
</head>
<body>
    <div class="navbar navbar-expand-xl navbar-dark bg-dark sticky-top">
        <div class="container">
            <div class="navbar-header">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" 
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
                @Html.ActionLink("The Watchers", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Về chúng tôi", "About","Home", new {@class = "nav-link" })</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">Loại</a>
						<div class="dropdown-menu">
							@Html.ActionLink("Đồng hồ nam", "ProductType", "Product", new { @Name = "Nam" }, new { @class = "dropdown-item" })
							@Html.ActionLink("Đồng hồ nữ", "ProductType", "Product", new { @Name = "Nu" }, new { @class = "dropdown-item" })
						</div>
					</li>
					<li class="nav-item">@Html.ActionLink("Liên hệ", "Contact", "Home", new { @class = "nav-link" })</li>

				</ul>
				<ul class="nav navbar-nav ml-auto">
					<li class="nav-item">
						@using (Html.BeginForm("Search", "Product", FormMethod.Post,new {@class = "form-inline"}))
						{
							<input type="text" class="form-control mr-sm-1" name="keysearch" />
							<button type="submit" class="btn btn-light my-sm-0 mr-sm-4"><i class="fa fa-search" aria-hidden="true" id="sch-button"></i>Search</button>
						}
					</li>
					@Html.Action("CartPartialView", "Cart")
					@Html.Action("Index","User")
				</ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
