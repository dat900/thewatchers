@model IEnumerable<TheWatchers.Models.Cart>

@{
	ViewBag.Title = "GetCart";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giỏ hàng</h2>

@*<p>
		@Html.ActionLink("Create New", "Create")
	</p>*@
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.iTenDH)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.iThuonghieu)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.iSoluong)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.iDongia)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.iTenDH)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.iThuonghieu)
			</td>
			<td>
				<form>
					<input type="number" id="txtsoluong" value=@item.iSoluong />
				</form>
				@*@Html.DisplayFor(modelItem => item.iSoluong)*@
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.iDongia)
			</td>
			<td>
				@using (Html.BeginForm("UpdateCart", "Cart", new { @map = item.idmadh, @Url = Request.Url }))
				{
					<input type="submit" value="Update" class="form-inline" id="btnAddToCart" />
				}|

				@*@Html.ActionLink("Details", "Details", new { id=item.idmadh }) |*@
				@Html.ActionLink("Delete", "DeleteCart", new { @MaDH = item.idmadh, @Url = Request.Url })
			</td>
		</tr>
	}

</table>
@if (Model.Count() != 0)
{
	<form action="../Order/Checkout">
		<button type="submit" id="btnThanhtoan" class="btn btn-lg btn-danger">THANH TOÁN</button>
	</form>
}

